alias grep="rg"
alias archclean="pacman -Qtdq | sudo pacman -Rns -"
alias "dps"='docker ps -a --format "table {{.ID}}\t{{.Names}}\t{{.Networks}}\t{{.State}}\t{{.Status}}"'
alias "twirforward"='ssh -L 54322:postgres:5432 satont@194.107.126.47 -p 2222'
alias edit="microsoft-edit"
alias dcd="docker context use default"
alias dct="docker context use twir"
alias td="docker --context twir"

alias l='eza -lh --icons=auto --no-permissions' # long list
alias ls='eza -1 --icons=auto --no-permissions' # short list
alias ll='eza -lha --icons=auto --sort=name --group-directories-first --no-permissions' # long list all
alias ld='eza -lhD --icons=auto --no-permissions' # long list dirs
alias lt='eza --icons=auto --tree --no-permissions' # list folder as tree

function tdu() {
	docker --context twir service update --with-registry-auth --force --image registry.twir.app/twirapp/$1 twir_$1
}

function tdl() {
    docker --context twir service logs -f --since 5m twir_$1
}

