# Add deno completions to search path
source ~/.config/antigen.zsh
source ~/.zshprivate

antigen use oh-my-zsh

antigen bundle git
antigen bundle command-not-found
antigen bundle fzf
antigen bundle docker-compose
antigen bundle nvm
antigen bundle zsh-history-substring-search
antigen bundle go
antigen bundle zsh-users/zsh-syntax-highlighting
antigen bundle zsh-users/zsh-autosuggestions

antigen apply

eval "$(starship init zsh)"

SAVEHIST=100000
HISTFILE=~/.zsh_history

alias cu="chezmoi re-add"
alias bat="bat --style=plain"
alias r="rm -irf"
alias grep="rg"
alias archclean="pacman -Qtdq | sudo pacman -Rns -"
alias "dps"='docker ps -a --format "table {{.ID}}\t{{.Names}}\t{{.Networks}}\t{{.State}}\t{{.Status}}"'
alias "twirforward"='ssh -L 54322:postgres:5432 satont@194.107.126.47 -p 2222'
alias edit="microsoft-edit"
alias dcd="docker context use default"
alias dct="docker context use twir"
alias td="docker --context twir"

function tdu() {
	td service update --with-registry-auth --force --image registry.twir.app/twirapp/$1 twir_$1
}

function tdl() {
    td service logs -f --since 5m twir_$1
}

#alias jq="fx"

# pnpm
export PNPM_HOME="/home/satont/.local/share/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac
# pnpm end

reboot_to_windows ()
{
    windows_title=$(grep -i windows /boot/grub/grub.cfg | cut -d "'" -f 2)
    sudo grub-reboot "$windows_title" && sudo reboot
}
alias reboot-to-windows='reboot_to_windows'

# bun completions
[ -s "/home/satont/.bun/_bun" ] && source "/home/satont/.bun/_bun"

# bun
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

. "$HOME/.cargo/env"

